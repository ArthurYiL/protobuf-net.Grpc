  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp3.0'">
    <PackageReference Include="Grpc.Net.Client" Version="$(GrpcDotNetVersion)" />
  </ItemGroup>

</Project>
